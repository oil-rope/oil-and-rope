# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Docstring and comments user max_line_length = 120
[*.py]
indent_style = space
indent_size = 4

# Use 2 spaces on HTML
[*.{html,y{a,}ml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_size = 2
indent_style = tab
insert_final_newline = true

[.github/**.yml]
indent_style = space
indent_size = 2
